# See http://docs.pylint.org/features.html

[MASTER]

load-plugins=pylint_django

[MESSAGES CONTROL]

disable=C0111,C1001,C0330,R0201,R0901,R0903,W0105,W0142,W0201,W0232

# C0111 missing-docstring
# C1001 old-style-class
# C0330 bad-continuation
# R0201 no-self-use
# R0901 too-many-ancestors
# R0903 too-few-public-methods
# W0105 pointless-string-statement
# W0142 star-args
# W0201 attribute-defined-outside-init
# W0232 no-init

[REPORTS]

output-format=colorized
reports=no

[BASIC]

bad-functions=map,filter,input,print # defaults + print
good-names=i,_,pk,gp,qs

# allow setUp as an exception since it's built in
method-rgx=setUp|([a-z_][a-z0-9_]{2,30})$

# allow lower cased "constants" since detection is iffy
const-rgx=(([A-Za-z_][A-Za-z0-9_]*)|(__.*__))$

[FORMAT]

indent-string='  '
max-line-length=100
