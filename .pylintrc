[MESSAGES CONTROL]

disable=C0111,C0330,R0903,W0105

# pylint-django plugin takes care of many of the django incompatibilities

# disabled:
# C0111 missing-docstring               would want to customize
# C0330 bad-continuation                hanging indent. fails a lot
# R0903 too-few-public-methods          Meta
# W0105 pointless-string-statement      docstrings

[REPORTS]

output-format=colorized

[BASIC]

# pk = primary key
good-names+=pk

# don't require docstring for Meta (in addition to default __x__ funcs)
# commented because we have this check disabled
# no-docstring-rgx=__.*__|Meta

# allow setUp as an exception since it's built in
method-rgx=setUp|([a-z_][a-z0-9_]{2,30})$

[FORMAT]

# expect 2-space indents
indent-string='  '

# starting with something generous
max-line-length=100

