// eslint configuration
{
  "env": {
    "browser": true,
    "jquery": true
  },
  "rules": {

    // possible errors
    "no-extra-parens": 2,
 
    // best practices
    "no-floating-decimal": 1,
    "no-console": 0, // 

    "global-strict": 0, // deprecated
    "strict": [2, "global"], // one strict statement per file

    // style
    "brace-style": [1, "1tbs", {"allowSingleLine": true}],
    "comma-style": [1, "last"],
    "consistent-this": [2, "_this"],
    "quotes": [1, "single", "avoid-escape"],
    "max-nested-callbacks": [2, 3],
    "no-lonely-if": 2,
    "spaced-line-comment": [1, "always", {"exceptions":["-"]}]
  }
}
